{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cvs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthday</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Image</th>
                <th>Education</th>
                <th>Projects</th>
                <th>Internship</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td><a href="{{ path('cv_show', { 'id': cv.id }) }}">{{ cv.id }}</a></td>
                <td>{{ cv.firstName }}</td>
                <td>{{ cv.lastName }}</td>
                <td>{% if cv.birthday %}{{ cv.birthday|date('Y-m-d') }}{% endif %}</td>
                <td>{{ cv.email }}</td>
                <td>{{ cv.telephone }}</td>
                <td>{{ cv.image }}</td>
                <td>{{ cv.education }}</td>
                <td>{{ cv.projects }}</td>
                <td>{{ cv.internship }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cv_show', { 'id': cv.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cv_edit', { 'id': cv.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('cv_pdf', { 'id': cv.id }) }}">pdf</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cv_new') }}">Create a new cv</a>
        </li>
    </ul>
{% endblock %}
